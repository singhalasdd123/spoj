#include<stdio.h>
#include<algorithm>
#include<memory.h>
using namespace std;
int main()
{
	long long int i,j,k,l,n,t,low,high,mid,m,a[100010],c,min=-1,b[100010],f;
	scanf("%lld",&t);
	while(t--)
	{
		scanf("%lld%lld",&n,&m);
		min=-1; 
		j=0;f=0;
		memset(b,0,sizeof(b));
		for(i=0;i<n;i++)
		scanf("%lld",&a[i]);
		sort(a,a+n);
		f=a[0];
		if(a[0]!=0)
		for(i=0;i<n;i++)
		{
			a[i]=a[i]-f;
		}
		low=a[0];
		high=a[n-1];
		mid=(low+high)/2;
		while(low<=high)
		{
			c=1;
			l=a[0]+mid;
			k=a[0];
			j=0;
		for(i=0;i<n;i++)
		{
			if(l<=a[i])
			{
				
				b[j]=a[i]-k;
				k=a[i];
				l=a[i]+mid;
				c++;
				j++;
			}
		}
		if(c>=m)
		{
		    sort(b,b+j);
		    if(min<b[0])
		    min=b[0];
			low=mid+1;
			mid=(low+high)/2;
		}
		else
		{
			high=mid-1;
			mid=(low+high)/2;
		}
		}
		printf("%lld\n",min);
	}
}

